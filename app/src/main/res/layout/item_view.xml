<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"

        >

        <ImageView
            android:id="@+id/emailIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/emailAuthorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaa"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/emailIV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emailSubjectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cccccccccccccc"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/emailIV"
            app:layout_constraintTop_toBottomOf="@id/emailAuthorTV"/>

        <TextView
            android:id="@+id/emailContentsTV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="zzzzzzz"
            app:layout_constraintBottom_toBottomOf="@+id/emailIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailIV"
            app:layout_constraintTop_toBottomOf="@id/emailSubjectTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

